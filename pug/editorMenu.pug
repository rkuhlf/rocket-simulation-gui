//- This should not have any scrolling, unless you are forced to go to two columns instead of three by three

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        base(href="../")
        link(rel="stylesheet", href="./css/main.css")

        title Editor Menu
    body
        include ./helpers

        //- Have a couple of preset objects to make it simpler to display the menu
        mixin selectable(imageSource, text, target)
            //- The whole thing needs to take us to the page when clicked. It should also have some kind of conditional rendering based on data.js
            a.selectable-editor(href='./html/' + target + '.html')
                img(src=imageSource, alt=text)

                p= text

        //- In the top left there is a back button
        //- +backButton("./html/index.html")

        //- I believe that this is a perfect application of display: grid
        .editor-menu
            +selectable('img/noseCone.png', "Nose", 'noseCone')
            +selectable('img/body.png', "Body", 'body')
            +selectable('img/fins.png', "Fins", 'fins')

            +selectable('img/motor.png', "Motor", 'motor')
            +selectable('img/parachute.png', "Recovery", 'recovery')

            +selectable('img/environment.png', "Environment", 'environment')


            +selectable('img/simulation.png', "Simulation", 'simulation')
            +selectable('img/data.png', "Data", 'data')

            +selectable('img/settings.png', "Settings", 'settings')
